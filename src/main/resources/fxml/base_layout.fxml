<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.polis.controller.RegistrationController"
            prefWidth="960.0" prefHeight="540.0"
            style="-fx-background-color: #C3D2FF;">

    <top>
        <HBox alignment="CENTER">
            <ImageView fx:id="headerImage" fitHeight="100" preserveRatio="true">
                <Image url="@/img/upper.png"/>
            </ImageView>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="80" BorderPane.alignment="CENTER">

            <VBox>
                <ImageView fitHeight="140.0" fitWidth="360.0">
                    <image>
                        <Image url="@/img/Wheel.png"/>
                    </image>
                </ImageView>
            </VBox>

            <VBox>
                <ImageView preserveRatio="false">
                    <image>
                        <Image url="@/img/Slots.png"/>
                    </image>
                </ImageView>
            </VBox>

            <VBox>
                <ImageView preserveRatio="false">
                    <image>
                        <Image url="@/img/ComingSoon.png"/>
                    </image>
                </ImageView>
            </VBox>

        </HBox>
    </center>

</BorderPane>
